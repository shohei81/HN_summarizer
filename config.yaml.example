# HN Summarizer Configuration Example
# Rename this file to config.yaml and customize as needed

# Summarizer configuration
summarizer:
  # LLM provider to use: 'gemini', 'openai', 'anthropic', or 'ollama'
  provider: gemini
  
  # Gemini configuration (if provider is 'gemini')
  gemini_model: gemini-1.5-flash-latest  # Flash is cheaper and faster than Pro
  gemini_api_key: your_google_api_key_here  # Or set GEMINI_API_KEY environment variable
  
  # OpenAI configuration (if provider is 'openai')
  # openai_model: gpt-3.5-turbo
  # openai_api_key: your_openai_api_key_here  # Or set OPENAI_API_KEY environment variable
  
  # Anthropic configuration (if provider is 'anthropic')
  # anthropic_model: claude-instant-1
  # anthropic_api_key: your_anthropic_api_key_here  # Or set ANTHROPIC_API_KEY environment variable
  
  # Ollama configuration (if provider is 'ollama')
  # ollama_model: llama2  # Local LLM, no API costs
  # ollama_host: http://localhost:11434
  
  # General summarizer settings
  max_tokens: 500  # Maximum length of summary

# Delivery configuration
delivery:
  # Delivery method: 'email', 'slack', or 'line'
  method: email
  
  # Email configuration (if method is 'email')
  email:
    smtp_server: smtp.gmail.com
    smtp_port: 587
    username: your_email@gmail.com  # Or set EMAIL_USERNAME environment variable
    password: your_app_password_here  # Or set EMAIL_PASSWORD environment variable
    sender: your_email@gmail.com  # Optional, defaults to username
    recipients:
      - recipient1@example.com
      - recipient2@example.com
    subject_template: "Hacker News Top Stories - {date}"
  
  # Slack configuration (if method is 'slack')
  # slack:
  #   webhook_url: your_slack_webhook_url  # Or set SLACK_WEBHOOK_URL environment variable
  #   channel: "#random"  # Optional, can be specified in the webhook
  #   username: "HN Summarizer Bot"  # Optional
  #   icon_emoji: ":newspaper:"  # Optional
  #   max_summaries_per_message: 3  # Optional, to avoid message size limits
  
  # LINE configuration (if method is 'line')
  # line:
  #   access_token: your_line_access_token  # Or set LINE_ACCESS_TOKEN environment variable
  #   to: user_id_or_group_id  # User ID or Group ID to send messages to

# Security configuration
security:
  # Whether to load sensitive data from environment variables
  use_environment_variables: true
  
  # Whether to encrypt API keys in the config file (not implemented yet)
  encrypt_api_keys: false
